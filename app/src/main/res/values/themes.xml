<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Secondhomework" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/holo_orange_light</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">@style/Theme.Secondhomework.TextView</item>
        <item name="checkboxStyle">@style/Theme.Secondhomework.CheckBox</item>

    </style>

    // в принципе при прописывании собственного стиля в области общего стиля можно опустить
    // parent="Widget.MaterialComponents.TextView", но это будет не очень комильфо
    <style name="Theme.Secondhomework.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Theme.Secondhomework.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Theme.Secondhomework.Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/material_500</item>
    </style>

    <style name="Theme.Secondhomework.Button" parent="Widget.MaterialComponents.Button">
            <item name="android:textColor">@color/black</item>
         </style>

    </resources>